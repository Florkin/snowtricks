{% extends "base.html.twig" %}

{% block title %}
    {{ page.title }}
{% endblock %}

{% block body %}

    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-30 col-sm-25">{{ form_row(form.title) }}</div>
            <div class="col-30 col-sm-25">{{ form_row(form.description) }}</div>
            <div class="col-30 col-sm-25">
                <button class="btn btn-success" type="submit">{{ btn_label|default("Valider") }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}
