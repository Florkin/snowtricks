{% extends "base.html.twig" %}

{% block title %}
    {{ page.title }}
{% endblock %}

{% block body %}

    <div class="container">
        {{ form_start(form) }}
        <div class="row">
{#            <div class="col-30 col-sm-25">{{ form_row(form.pictureFiles, {'attr': {'class': 'file-dropzone', 'data-upload-url': ajaxImgUploadUrl }}) }}</div>#}
            <div class="col-30 col-sm-25">
                <div class="dropzone file-dropzone"
                {% if trick.id is defined and trick.id != null %}
                     data-trick-id="{{ trick.id }}"
                {% endif %}
                ></div>
            </div>
            <div class="col-30 col-sm-25">{{ form_row(form.title) }}</div>
            <div class="col-30 col-sm-5">{{ form_row(form.difficulty) }}</div>
            <div class="col-30 col-sm-12">{{ form_row(form.description) }}</div>
            <div class="col-30 col-sm-12">{{ form_row(form.categories, {'attr': {'class': 'category-selector'}}) }}</div>
            <div class="col-30 col-sm-20">{{ form_row(form.visible) }}</div>
            <div class="col-30 col-sm-20">
                <div id="videos-fields-list"
                    data-prototype="{{ form_widget(form.videos.vars.prototype)|e }}"
                    data-widget-tags="{{ '<div class="trick-video-field"></div>'|e }}"
                    data-widget-counter="{{ form.videos|length }}">
                    <label for="videos-fields-list">Vidéos youtube</label>
                    {% for videoField in form.videos %}
                        <div class="trick-video-field">
                            {{ form_errors(videoField) }}
                            {{ form_widget(videoField) }}
                        </div>
                    {% endfor %}
                </div>

                <button type="button"
                        class="js-add-video-btn btn btn-outline-primary"
                        data-list-selector="#videos-fields-list">Ajouter une vidéo</button>
            </div>
            <ul class="pictures" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}"></ul>
            <div class="col-30 col-sm-25 mt-5">
                <button class="btn btn-success" type="submit">{{ btn_label|default("Valider") }}</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block add_stylesheets %}
    {{ encore_entry_link_tags('forms') }}
{% endblock %}

{% block add_javascripts %}
    {{ encore_entry_script_tags('forms') }}
{% endblock %}