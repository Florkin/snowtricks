{% extends 'manage/form_base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% block formtitle %}Réinitialiser votre mot de passe{% endblock %}

{% block form %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	
	{{ form_start(requestForm) }}
	{{ form_row(requestForm.email) }}
	<div>
		<small>
			Entrez votre adresse email, nous vous enverrons un lien pour réinitialiser votre mot de passe.
		</small>
	</div>
	
	<button class="btn btn-primary">Envoyer le lien de réinitialisation</button>
	{{ form_end(requestForm) }}
{% endblock %}