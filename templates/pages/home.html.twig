{% extends "base.html.twig" %}

{% block title %}
    {{ page.title }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ page.title }}</h1>
    </div>

    <div class="container">
        <h2>Derniers Tricks Ajout√©s</h2>
        <div class="row">
            {% for trick in tricks %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="#">{{ trick.title }}</a>
                            </h5>
                            <p>{{ trick.shortDescription }}</p>
                            <p class="text-muted">{{ trick.stringedDatetime|format_datetime('full', 'none', locale='fr') }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>




{% endblock %}