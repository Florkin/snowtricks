{% block nav %}
    <nav class="main-navbar navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">SnowTricks</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item{% if current_menu is defined and current_menu == "home" %} active{% endif %}">
                    <a class="nav-link" href="{{ path("home") }}">Home</a>
                </li>
                <li class="nav-item{% if current_menu is defined and current_menu == "tricks_list" %} active{% endif %}">
                    <a class="nav-link" href="{{ path("trick.index") }}">Tricks</a>
                </li>
            </ul>
            <ul class="navbar-nav right-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="fa fa-edit"></span>
                    </a>
                    <div class="dropdown-menu user-dropdown" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item{% if current_menu is defined and current_menu == "admin.trick.index" %} active{% endif %}"
                           href="{{ path("admin.trick.index") }}"><span class="fa fa-user"></span> Gérer des Tricks</a>
                        <a class="dropdown-item{% if current_menu is defined and current_menu == "admin.trick.new" %} active{% endif %}"
                           href="{{ path("admin.trick.new") }}"><span class="fa fa-plus"></span> Nouveau Trick</a>
                        <a class="dropdown-item{% if current_menu is defined and current_menu == "admin.category.new" %} active{% endif %}"
                           href="{{ path("admin.category.index") }}"><span class="fa fa-object-group"></span> Gérer les catégories</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="fa fa-user"></span>
                    </a>
                    <div class="dropdown-menu user-dropdown" aria-labelledby="navbarDropdown">
                        {% if app.user.username is defined %}
                            <a class="dropdown-item" href="#"><span class="fa fa-user"></span> {{ app.user.username }}</a>
                            <a class="dropdown-item" href="{{ path("app_logout") }}"><span class="fa fa-sign-out"></span> Logout</a>
                        {% else %}
                            <a class="dropdown-item{% if current_menu is defined and current_menu == "app_login" %} active{% endif %}" href="{{ path("app_login") }}"><span class="fa fa-sign-in"></span> Se connecter</a>
                            <a class="dropdown-item{% if current_menu is defined and current_menu == "app_register" %} active{% endif %}" href="{{ path("app_register") }}"><span class="fa fa-user-plus"></span> S'inscrire</a>
                        {% endif %}
                    </div>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
