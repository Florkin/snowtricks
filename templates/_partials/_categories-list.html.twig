<ul class="custom-list dynamic-bullets">
	{% if categories|length > 0 %}
		{% for category in categories %}
			<li class="custom-list-item{% if current_menu is defined and current_menu == "category.show." ~ category.slug %} active{% endif %}">
				<a class=""
				   href="{{ path("category.show", {id: category.id, slug:category.slug}) }}">{{ category.title }}</a>
			</li>
		{% endfor %}
		<li class="custom-list-item{% if current_menu is defined and current_menu == "trick.index" %} active{% endif %}">
			<a class="font-weight-normal"
			   href="{{ path("trick.index") }}"><b>Tous les tricks</b></a>
		</li>
	
	
	{% else %}
		<li class="custom-list-item{% if current_menu is defined and current_menu == "trick.index" %} active{% endif %}">
			<a class="font-weight-normal"
			   href="{{ path("trick.index") }}">Les tricks</a>
		</li>
	{% endif %}
</ul>